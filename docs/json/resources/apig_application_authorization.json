{
  "provider_schemas": {
    "huaweicloud/huaweicloud": {
      "resource_schemas": {
        "huaweicloud_apig_application_authorization": {
          "block": {
            "attributes": {
              "api_ids": {
                "type": [
                  "set",
                  "string"
                ],
                "description": "The list of API IDs to be authorized for the application.",
                "required": true
              },
              "application_id": {
                "type": "string",
                "description": "The ID of the application authorized to access the APIs.",
                "required": true,
                "forcenew": true
              },
              "env_id": {
                "type": "string",
                "description": "The environment ID where the APIs were published.",
                "required": true,
                "forcenew": true
              },
              "id": {
                "type": "string",
                "computed": true
              },
              "instance_id": {
                "type": "string",
                "description": "The ID of the dedicated instance to which the application and APIs belong.",
                "required": true,
                "forcenew": true
              },
              "region": {
                "type": "string",
                "description": "The region where the application and APPCODEs are located.",
                "computed": true
              }
            }
          },
          "product": {
            "short": "APIG",
            "name": "API Gateway",
            "catalog": "Middleware",
            "name_cn": "API网关",
            "catalog_cn": "应用中间件"
          }
        }
      }
    }
  }
}
